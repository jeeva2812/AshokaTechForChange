<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".activities.scrap_collector_activities.DisplayRouteActivity"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <fragment
            android:id="@+id/map_route"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".activities.MapsActivity" />
    </FrameLayout>
    <LinearLayout
        android:id="@+id/lllll"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_total_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total distance: "/>
        <TextView
            android:id="@+id/tv_est_profit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estimated Profit "/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm_pickup"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Collect Waste"
        android:background="#338006"
        android:textColor="#fff"
        android:textSize="20sp"
        />
</RelativeLayout>


